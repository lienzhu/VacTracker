<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlue">

    <TextView
        android:id="@+id/text_development"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/sfprodisplay_medium"
        android:text="Frequently Asked Questions"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/tvQ4"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="How do pandemics like COVID-19 impact the clinical trials process?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvQ5"
        app:layout_constraintStart_toStartOf="@+id/tvQ5"
        app:layout_constraintTop_toBottomOf="@+id/tvQ5" />

    <Button
        android:id="@+id/tvQ7"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="How can I provide feedback about this tracker?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvQ6"
        app:layout_constraintStart_toStartOf="@+id/tvQ6"
        app:layout_constraintTop_toBottomOf="@+id/tvQ6" />

    <Button
        android:id="@+id/tvQ3"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="What do the clinical trials mean and how do they work?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvQ2"
        app:layout_constraintStart_toStartOf="@+id/tvQ2"
        app:layout_constraintTop_toBottomOf="@+id/tvQ2" />

    <Button
        android:id="@+id/tvQ1"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="What is the CoVac App?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/text_development"
        app:layout_constraintStart_toStartOf="@+id/text_development"
        app:layout_constraintTop_toBottomOf="@+id/text_development" />

    <Button
        android:id="@+id/tvQ5"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="What is the meaning of each heading on the Vaccine Profiles?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvQ3"
        app:layout_constraintStart_toStartOf="@+id/tvQ3"
        app:layout_constraintTop_toBottomOf="@+id/tvQ3" />

    <Button
        android:id="@+id/tvQ6"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="How can I help?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvQ4"
        app:layout_constraintStart_toStartOf="@+id/tvQ4"
        app:layout_constraintTop_toBottomOf="@+id/tvQ4" />

    <Button
        android:id="@+id/tvQ2"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_unfocused"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="Where is the information from?"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tvQ1"
        app:layout_constraintStart_toStartOf="@+id/tvQ1"
        app:layout_constraintTop_toBottomOf="@+id/tvQ1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/tvQ7"
        app:layout_constraintStart_toStartOf="@+id/tvQ7"
        app:layout_constraintTop_toBottomOf="@+id/tvQ7"
        app:srcCompat="@drawable/faqactivity_display_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
